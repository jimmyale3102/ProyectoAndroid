<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register__doctor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azulbase1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jimmy.hospitalsapp.activities.Register_DoctorAct">

    <EditText
        android:id="@+id/namedoc"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="38dp"
        android:ems="10"
        android:hint="Nombre de Doctor"
        android:inputType="textPersonName"
        android:text="" />

    <EditText
        android:id="@+id/idDoc"
        android:layout_width="match_parent"
        android:layout_height="40dp"

        android:layout_marginTop="27dp"
        android:ems="10"
        android:hint="ID Doctor"
        android:inputType="textPersonName"
        android:text=""
        android:layout_below="@+id/namedoc"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/especView"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="EspecializaciÃ³n"
        android:layout_below="@+id/idDoc"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/especView"
        android:entries="@array/spinner"
        android:spinnerMode="dialog" />

    <Button
        android:id="@+id/btnaddDoc"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Agregar"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
